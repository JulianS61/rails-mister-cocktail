<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <%= link_to cocktail_path(cocktail), class: 'no-decoration' do %>
      <% if cocktail.picture.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(cocktail.picture.key, width: 600, height: 400, crop: :fill) %>)">
        <% else %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://source.unsplash.com/collection/10595326/drink-%26-cocktails')">
          <% end %>
          <%= cocktail.name%>
        </div>
      <% end %>
    <% end %>
  </div>
