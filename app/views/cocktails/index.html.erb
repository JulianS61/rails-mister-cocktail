<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <%= link_to cocktail_path(cocktail) do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/collection/10595326/drink-%26-cocktails)">
        <%= cocktail.name%>
      </div>
    <% end %>
  <% end %>
</div>
